{
    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "conventionalCommits": true,
    "exact": true,
    "packages": ["packages/*"],
    "command": {
        "publish": {
            "npmClient": "yarn",
            "ignoreChanges": ["ignored-file", "*.md"],
            "message": "chore(release): new version %s [skiprelease]"
        },
        "version": {
            "allowBranch": "master"
        }
    },

    "changelog": {
